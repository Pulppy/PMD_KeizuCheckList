<?xml version="1.0"?>

<ruleset name="Code Style"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>
Rules which enforce a specific coding style.
    </description>
    <!--
    Rule		: VisualPage-08
    @created	: 2019/10/28 Truong Trang Ngoc Phuc
    @description: Khai bao 1 page, 1 form tuong ung. Ko khai bao 2 form cho 1 page
     -->
     <rule name="Check-List-VisualPage-08"
		  since="5.6.0"
          message="[VisualPage-08] Khai bao 1 page, 1 form tuong ung. Ko khai bao 2 form cho 1 page"
          class="net.sourceforge.pmd.lang.vf.rule.VisualPage08">
            <priority>3</priority>
    </rule>
    <!--
    Rule		: VisualPage-16
    @created	: 2019/10/31 Truong Trang Ngoc Phuc
    @description: Dat ten controller theo rule: Ten page + Controller
     -->
    <rule name="Check-List-VisualPage-16"
		  since="5.6.0"
          message="[VisualPage-16] Dat ten controller theo rule: Ten page + Controller"
          class="net.sourceforge.pmd.lang.vf.rule.VisualPage16">    
		<priority>3</priority>
    </rule>    
    <!--
    Rule		: VisualPage-19
    @created	: 2019/10/31 Truong Trang Ngoc Phuc
    @description: Khi hien thi du lieu thi dung outputtext khong đuoc dung outputField
     -->    
    <rule name="Check-List-VisualPage-19"
		  since="5.6.0"
          message="[VisualPage-19] Khi hien thi du lieu thi dung outputtext khong đuoc dung outputField"
          class="net.sourceforge.pmd.lang.vf.rule.VisualPage19">
		<priority>3</priority>
    </rule>
    <!--
    Rule		: VisualPage-20
    @created	: 2019/10/31 Truong Trang Ngoc Phuc
    @description: Su dung function HTMLENCODE khi set title cho apex:sectionHeader
     -->
    <rule name="Check-List-VisualPage-20"
		  since="5.6.0"
          message="[VisualPage-20] Su dung function HTMLENCODE khi set title cho apex:sectionHeader"
          class="net.sourceforge.pmd.lang.vf.rule.VisualPage20">
       		<description>
				apex:sectionHeader title="{!HTMLENCODE($Label.Lbl_CLS0300_Title)}
			</description>
            <priority>3</priority>
    </rule>
</ruleset>
